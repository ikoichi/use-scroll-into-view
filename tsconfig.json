{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "webpack",
    "jest",
    "jest.config.js",
    "**/*.test.ts"
  ],
  "types": [
    "typePatches"
  ]
}